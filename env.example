# Server Configuration
PORT=3000
HOST=0.0.0.0
PUBLIC_BASE_URL=https://your-app.vercel.app

# MCP API Key (Required for authentication)
# Generate a secure key using: node -e "console.log('mcp_' + require('crypto').randomBytes(32).toString('base64url'))"
MCP_API_KEY=your_generated_api_key_here

# WHOOP OAuth Credentials
# Get these from https://developer.whoop.com/
WHOOP_CLIENT_ID=your_whoop_client_id
WHOOP_CLIENT_SECRET=your_whoop_client_secret
WHOOP_REDIRECT_PATH=/oauth/whoop/callback
WHOOP_SCOPES=read:sleep,read:cycles,read:profile

# Token Storage
TOKEN_STORE_PATH=./data/whoop-tokens.json

